<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>nugsnet6</RootNamespace>
    <InvariantGlobalization>true</InvariantGlobalization>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <!-- The following should embed every query file into the assembly
    Credit: https://stackoverflow.com/questions/69258345/add-all-files-in-folder-including-sub-dir-as-embedded-resource
    -->
    <EmbeddedResource Include="Pages\**\*.cypher"></EmbeddedResource>
    <EmbeddedResource Include="Pages\**\*.sql"></EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Airtable" Version="1.3.0" />
    <PackageReference Include="CodeMechanic.Diagnostics" Version="1.0.1" />
    <PackageReference Include="CodeMechanic.Embeds" Version="1.0.0" />
    <PackageReference Include="CodeMechanic.RazorHAT" Version="1.0.0" />
    <PackageReference Include="CodeMechanic.Types" Version="1.0.1" />
    <PackageReference Include="ElectronNET.API" Version="23.6.1" />
    <PackageReference Include="Htmx" Version="1.0.1" />
    <PackageReference Include="Htmx.TagHelpers" Version="1.0.1" />
    <PackageReference Include="Insight.Database" Version="6.3.11" />
    <PackageReference Include="Neo4j.Driver" Version="5.8.0" />
    <PackageReference Include="RazorHAT" Version="1.0.0" />
    <PackageReference Include="RestSharp" Version="110.2.0" />
    <PackageReference Include="System.ServiceModel.Syndication" Version="7.0.0" />
  </ItemGroup>

</Project> 
