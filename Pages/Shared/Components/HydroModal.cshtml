@using nugsnet6.Extensions
@model nugsnet6.Pages.Shared.Components.HydroModal

<section>

    @if (@Model.Show)
    {
        <div>

            <!-- Modal -->

            <div
                class="fixed inset-0 z-30 flex items-center justify-center overflow-auto bg-black bg-opacity-50"
                x-show="@Model.Show.AsJS()">
                <!-- Modal inner -->
                <div
                    class="max-w-3xl px-6 py-4 mx-auto text-left bg-white rounded shadow-lg"
                    hydro-on:click.away="@(() => Model.CloseModal())"
                    x-transition:enter="motion-safe:ease-out duration-300"
                    x-transition:enter-start="opacity-0 scale-90"
                    x-transition:enter-end="opacity-100 scale-100">
                    <!-- Title / Close-->
                    <div class="flex items-center justify-between">
                        <h5 class="mr-3 text-black max-w-none">@Model.Title</h5>

                        <button type="button" class="z-50 cursor-pointer" hydro-on:click="@(() => Model.CloseModal())">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                            </svg>
                        </button>
                    </div>

                    <!-- content -->
                    <div>@Model.Message</div>
                </div>
            </div>
        </div>
    }

</section>